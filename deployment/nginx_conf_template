#upstream citationsneeded_org {
upstream conference_org {
    server 127.0.0.1:8000;
}

server {
    listen 80;
    server_name .scipy.org localhost;
    rewrite ^ https://conference.scipy.org$request_uri? permanent;
}

#server {
#    listen 80;
#    server_name citationsneeded.org;
#    rewrite ^ https://citationsneeded.org$request_uri? permanent;
#}

server {
    listen 443;
    server_name .scipy.org localhost;

    ssl on;
    ssl_certificate     /etc/ssl/certs/citationsneeded.crt;
    ssl_certificate_key /etc/ssl/private/citationsneeded.key;

    access_log /home/scipy/site/logs/scipy.access.log;
    error_log /home/scipy/site/logs/scipy.error.log;

    #location /nginx_status {
    #    stub_status on;
    #    access_log off;
    #    allow {{ local_ip }}
    #    deny all;
    #}

    location /scipy2014/site_media/media/ {
        alias /home/scipy/site/site_media/media/;
    }

    location /scipy2014/site_media/static/ {
        alias /home/scipy/site/site_media/static/;
    }

    location /scipy2014/ {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Ssl on;
        proxy_set_header Host $host;
        proxy_pass http://conference_org;
    }
}
